# Database
MONGODB_URI=mongodb://localhost:27017/strive
DATABASE_NAME=strive

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (choose one)
# Resend
RESEND_API_KEY=your-resend-api-key

# SMTP (alternative to Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
# OR individual Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Sanity CMS (if using)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-sanity-api-token

# Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Strive

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
CORS_ORIGIN=http://localhost:3000

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Backup Configuration
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
CLOUD_BACKUP_ENABLED=false
CLOUD_STORAGE_PROVIDER=aws
BACKUP_BUCKET=your-backup-bucket-name
BACKUP_REGION=us-east-1
BACKUP_NOTIFICATIONS=true
BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com
BACKUP_WEBHOOK_URL=https://your-monitoring-service.com/webhook
BACKUP_TIMEZONE=UTC
BACKUP_HEALTH_CHECK=true
BACKUP_HEALTH_CHECK_URL=https://hc-ping.com/your-backup-check-uuid

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Development Settings
SKIP_ENV_VALIDATION=false
DISABLE_ESLINT=false
ANALYZE=false

# Monitoring & Observability
HEALTH_CHECK_SECRET=your-health-check-secret
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Third-party Integrations
WEBHOOK_SECRET=your-webhook-secret
API_KEY_SECRET=your-api-key-secret