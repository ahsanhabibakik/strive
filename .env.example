# =============================================================================
# STRIVE - SAAS GOAL TRACKING PLATFORM - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!
# =============================================================================

# =============================================================================
# üöÄ APP CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Strive
NEXT_PUBLIC_APP_DESCRIPTION=A powerful platform to help you achieve your goals
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js Configuration (Required)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-32-characters-minimum

# Security Keys (Generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-32-characters-minimum
ENCRYPTION_KEY=your-encryption-key-32-characters-minimum

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION (Required)
# =============================================================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/strive?retryWrites=true&w=majority

# =============================================================================
# üîë OAUTH PROVIDERS (Optional but recommended)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# üìß EMAIL CONFIGURATION (Required for password reset)
# =============================================================================
# Option 1: Modern Email Service (Recommended)
EMAIL_SERVER_HOST=smtp.resend.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=resend
EMAIL_SERVER_PASSWORD=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com

# Option 2: Gmail SMTP (Alternative)
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# üí≥ PAYMENT PROCESSING (Required for billing)
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Payment URLs
NEXT_PUBLIC_SUCCESS_URL=http://localhost:3000/billing/success
NEXT_PUBLIC_CANCEL_URL=http://localhost:3000/billing/cancelled
NEXT_PUBLIC_FAIL_URL=http://localhost:3000/billing/failed

# =============================================================================
# üìä ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Vercel Analytics
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Error Tracking
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# =============================================================================
# ü§ñ AI & EXTERNAL SERVICES (Optional)
# =============================================================================
# OpenAI for AI-powered features
OPENAI_API_KEY=sk-your-openai-api-key

# Vector Database for AI search
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=strive-goals

# =============================================================================
# üñºÔ∏è FILE STORAGE (Optional)
# =============================================================================
# Cloudinary for image/file uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
NEXT_PUBLIC_UPLOAD_MAX_SIZE=5242880

# =============================================================================
# üõ°Ô∏è SECURITY & PERFORMANCE (Optional)
# =============================================================================
# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# üéõÔ∏è FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
ENABLE_EMAIL_VERIFICATION=true

# =============================================================================
# üêõ DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# üåê SOCIAL MEDIA & CONTACT (Optional)
# =============================================================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourbrand
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourbrand
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourbrand
SUPPORT_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com